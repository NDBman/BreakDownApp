<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	<persistence-unit name="BreakDownApp">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<jta-data-source>java:/BreakDownAppDS</jta-data-source>
		
		<class>hu.unideb.inf.dandy.szd.jpa.entity.Admin</class>
		<class>hu.unideb.inf.dandy.szd.jpa.entity.Competition</class>
		<class>hu.unideb.inf.dandy.szd.jpa.entity.Event</class>
		<class>hu.unideb.inf.dandy.szd.jpa.entity.Location</class>
		<class>hu.unideb.inf.dandy.szd.jpa.entity.Organizer</class>
		<class>hu.unideb.inf.dandy.szd.jpa.entity.Privileges</class>
		<class>hu.unideb.inf.dandy.szd.jpa.entity.Breaker</class>
		
		<properties>
			<property name="javax.persistence.jdbc.user" value="postgres" />
			<property name="javax.persistence.jdbc.password" value="dandy" />
			<property name="javax.resistence.jdbc.driver" value="org.postgresql.Driver" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
			<property name="hibernate.hbm2ddl.auto" value="create" />
		</properties>
	</persistence-unit>
</persistence>